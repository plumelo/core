# Settings
set main-view = \
  line-number:no,interval=5 \
  id:yes \
  date:relative-compact \
  author:email-user \
  commit-title:yes,graph,refs,overflow=no
set refs-view = \
  line-number:no \
  id:no \
  date:relative-compact \
  author:full ref commit-title

set blame-options              = -C -C -C
set show-notes                 = yes
set show-changes               = yes
set status-show-untracked-dirs = yes
set refresh-mode               = after-command
set line-graphics              = utf-8

# branch
bind refs n !@git branch "%(prompt Enter branch name: )"
bind main \n !@git branch "%(prompt Enter branch name: )" %(commit)
bind main \c ?git checkout %(commit)
bind refs <del> ?git branch -d %(branch)
bind refs \<del> !?git push %(remote) --delete %(branch)
bind main <del> !?git push %(remote) --delete %(branch)

#Fetch
bind generic F none
bind generic F ?git fetch -p %(remote)
bind main    F ?git fetch -p %(remote)

# reset
bind main   ! ?git reset --hard %(commit)
bind refs   ! ?git reset --hard %(branch)
bind main \s ?git reset --soft HEAD~"%(prompt Enter number: )"

# rebase
bind refs \r ?git rebase %(branch)

# rebase interactive
bind main \r ?git rebase -i %(branch)
bind main \R ?git rebase -i %(commit)
bind refs r ?git rebase -i %(branch)
bind main a ?git rebase --abort
bind refs a ?git rebase --abort

# push
bind generic p none
bind generic ps ?git push -u %(remote) %(repo:head)
bind status ps ?git push -u %(remote) %(repo:head)
bind main   pf !?git push -f %(remote) %(repo:head)
bind status pf !?git push -f %(remote) %(repo:head)

# pull
bind main pu ?git pull --ff-only

# commit
bind generic A none
bind main \C ?git cherry-pick -n %(commit)
bind main A ?git commit --amend
bind main + ?git commit --amend --no-edit

# tag the selected commit
bind main T !?@git tag %(prompt) %(commit)

# copy sha to clipboard
bind generic Y !sh -c "echo -n %(commit) | xclip -selection c && echo Copied %(commit) to clipboard"

